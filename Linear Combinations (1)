<script>
function zero(){

document.getElementById("tnum").innerText="0"
document.getElementById("snum").innerText="0"
document.getElementById("onum").innerText="0"

document.getElementById("V1").innerText="0"
document.getElementById("V2").innerText="0"
document.getElementById("V3").innerText="0"


document.getElementById("M11").innerText="4"
document.getElementById("M21").innerText="6"
document.getElementById("M31").innerText="4"
document.getElementById("M12").innerText="8"
document.getElementById("M22").innerText="12"
document.getElementById("M32").innerText="6"
document.getElementById("M13").innerText="6"
document.getElementById("M23").innerText="12"
document.getElementById("M33").innerText="8"

document.getElementById("A11").innerText="0"
document.getElementById("A21").innerText="0"
document.getElementById("A31").innerText="0"
document.getElementById("A12").innerText="0"
document.getElementById("A22").innerText="0"
document.getElementById("A32").innerText="0"
document.getElementById("A13").innerText="0"
document.getElementById("A23").innerText="0"
document.getElementById("A33").innerText="0"}
zero()
</script>



<script>
function arrow(s,r){
if (r==1){
a=parseFloat(document.getElementById("A11").innerText)
b=parseFloat(document.getElementById("A21").innerText)
c=parseFloat(document.getElementById("A31").innerText)
t=parseFloat(document.getElementById("tnum").innerText)
x=4
y=6
z=4
}
if (r==2){
a=parseFloat(document.getElementById("A12").innerText)
b=parseFloat(document.getElementById("A22").innerText)
c=parseFloat(document.getElementById("A32").innerText)
t=parseFloat(document.getElementById("snum").innerText)
x=8
y=12
z=6
}
if (r==3){
a=parseFloat(document.getElementById("A13").innerText)
b=parseFloat(document.getElementById("A23").innerText)
c=parseFloat(document.getElementById("A33").innerText)
t=parseFloat(document.getElementById("onum").innerText)
x=6
y=12
z=8
}







v1=parseFloat(document.getElementById("V1").innerText)
v2=parseFloat(document.getElementById("V2").innerText)
v3=parseFloat(document.getElementById("V3").innerText)
t+=s*1
a+=s*x
b+=s*y
c+=s*z
v1+=s*x
v2+=s*y
v3+=s*z

document.getElementById("V1").innerText=v1
document.getElementById("V2").innerText=v2
document.getElementById("V3").innerText=v3

if (r==1){
document.getElementById("A11").innerText=a
document.getElementById("A21").innerText=b
document.getElementById("A31").innerText=c
document.getElementById("tnum").innerText=t}

if (r==2){
document.getElementById("A12").innerText=a
document.getElementById("A22").innerText=b
document.getElementById("A32").innerText=c
document.getElementById("snum").innerText=t}

if (r==3){
document.getElementById("A13").innerText=a
document.getElementById("A23").innerText=b
document.getElementById("A33").innerText=c
document.getElementById("onum").innerText=t}



}
</script>


<script>






var initialized=0
var page=0
var quests=[
"0. Find a basket with V=12, E=18, and F=10",
"1. Good job, now find a basket with V=10, E=18, and F=12",
"2. Good job, now find a basket with V=14, E=24, and F=16",
"3. Good job, now find a basket with at least 5 of each type of solid and with V=F",
"4. Excellent, now find a basket with V=32, E=48, and F=32",
"5. Excellent, now find a basket with V=28, E=48, and F=28",
"6. Good job, now find a basket with V=30, E=48, and F=30",
"7. Excellent, now find a basket with more cubes than octahedrons and with V=F",
"8. Good job, now find a basket with at least one of each shape and V>F",
"9. Excellent, now find a basket with at least one of each shape and V>E",
"10. Good job, now find a basket with the same number of tetrahedron faces, cube faces, and octahedron faces",
"11. Good job, now find a basket with the same number of tetrahedron edges, cube edges, and octahedron edges",
"12. Good job, now find a basket with the same number of tetrahedron vertices, cube vertices, and octahedron vertices",
"13. Good job, now find a basket with the same number of tetrahedron vertices, tetrahedron edges and tetrahedron faces",
"Good job!!!"]





function grade(p,v1,v2,v3,t,c,o){
correct=0

if (p==0){ if (v1==12 && v2==18 && v3==10){correct=1}}
if (p==1){ if (v1==10 && v2==18 && v3==12){correct=1}}
if (p==2){ if (v1==14 && v2==24 && v3==16){correct=1}}
if (p==3){ if (v1==v3 && t>=5 && c>=5 && o>=5){correct=1}}
if (p==4){ if (v1==32 && v2==48 && v3==32){correct=1}}
if (p==5){ if (v1==28 && v2==48 && v3==28){correct=1}}
if (p==6){ if (v1==30 && v2==48 && v3==30){correct=1}}
if (p==7){ if (v1==0 && v2==0 && v3==0){correct=1}}
if (p==8){ if (v1>v3 && t>=1 && c>=1 && o>=1){correct=1}}
if (p==9){ if (v1==0 && v2==0 && v3==0){correct=1}}
if (p==10){ if (4*t==6*c && 6*c==8*o){correct=1}}
if (p==11){ if (6*t==12*c && 12*c==12*o){correct=1}}
if (p==12){ if (4*t==8*c && 8*c==6*o){correct=1}}
if (p==13){ if (v1==0){correct=1}}


return(correct)
}






function submit(){
if (initialized==0){
document.getElementById("sub").getElementsByTagName("button")[0].innerText="Submit"
document.getElementById("question").innerText=quests[page]
}

if (initialized==1){

v1=parseFloat(document.getElementById("V1").innerText)
v2=parseFloat(document.getElementById("V2").innerText)
v3=parseFloat(document.getElementById("V3").innerText)
tet=parseFloat(document.getElementById("tnum").innerText)
cub=parseFloat(document.getElementById("snum").innerText)
oct=parseFloat(document.getElementById("onum").innerText)

var feed=document.getElementById("try").innerText
if (feed==""){
document.getElementById("try").innerText="Try Again"}
if (feed=="Not Quite"){
document.getElementById("try").innerText="Try Again"}
if (feed=="Try Again"){
document.getElementById("try").innerText="Not Quite"}




if (grade(page,v1,v2,v3,tet,cub,oct)==1)
{
document.getElementById("try").innerText=""
page+=1
document.getElementById("question").innerText=quests[page]
zero()
}




}
initialized=1
}











</script>













</body>
</html>




